{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CALCULATOR_BUILD_TESTS": "ON",
                "VCPKG_MANIFEST_FEATURES": "tests"
            }
        },
        {
            "name": "gcc",
            "displayName": "GCC",
            "description": "Build configuration using GCC compiler and vcpkg toolchain",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "clang",
            "displayName": "Clang",
            "description": "Build configuration using Clang compiler and vcpkg toolchain",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "msvc",
            "displayName": "MSVC",
            "description": "Build configuration using MSVC compiler and vcpkg toolchain",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_CXX_FLAGS": "/W4 /permissive- /EHsc",
                "CMAKE_C_FLAGS": "/W4 /permissive-"
            }
        }
    ]
}