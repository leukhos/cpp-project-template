{
    "version": 6,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "platform",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "platform",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "platform",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_C_FLAGS": "/W4 /permissive-",
                "CMAKE_CXX_FLAGS": "/W4 /permissive- /EHsc"
            }
        },
        {
            "name": "dev",
            "inherits": "platform",
            "displayName": "Development (Debug)",
            "description": "Development profile. Unoptimized debug build with full symbols and tests enabled.",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CALCULATOR_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "test",
            "inherits": "platform",
            "displayName": "Test (RelWithDebInfo)",
            "description": "Test execution profile with moderate optimizations and debug info. Runs all unit and functional tests.",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CALCULATOR_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "prod",
            "inherits": "platform",
            "displayName": "Production (Release)",
            "description": "Production release build with full optimizations and tests compiled out.",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DOCTEST_CONFIG_DISABLE": "ON"
            }
        },
        {
            "name": "bench",
            "inherits": "prod",
            "displayName": "Benchmark (Release)",
            "description": "Benchmarking profile with release optimizations and performance tests enabled.",
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "bench"
            }
        }
    ]
}