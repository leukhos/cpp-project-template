{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CALCULATOR_BUILD_TESTS": "ON",
                "CALCULATOR_BUILD_BENCHMARKS": "OFF"
            },
            "warnings": {
                "dev": true,
                "unusedCli": false
            }
        },
        {
            "name": "gcc",
            "displayName": "GCC",
            "description": "Build configuration using GCC compiler with Ninja Multi-Config generator and vcpkg toolchain",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "clang",
            "displayName": "Clang",
            "description": "Build configuration using Clang compiler with Ninja Multi-Config generator and vcpkg toolchain",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "msvc",
            "displayName": "MSVC",
            "description": "Build configuration using MSVC compiler with Ninja Multi-Config generator and vcpkg toolchain",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_CXX_FLAGS": "/W4 /permissive- /EHsc",
                "CMAKE_C_FLAGS": "/W4 /permissive-"
            }
        },
        {
            "name": "msvc-msbuild",
            "displayName": "MSVC (MSBuild)",
            "description": "Build configuration using MSVC compiler with MSBuild generator and vcpkg toolchain",
            "inherits": "msvc",
            "generator": "Visual Studio 17 2022"
        }
    ]
}