{
    "version": 10,
    "configurePresets": [
        {
            "name": "vcpkg",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "gcc",
            "inherits": "vcpkg",
            "displayName": "GCC with Strict Warnings",
            "description": "GCC build with comprehensive compiler warnings enabled",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Werror",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -Werror"
            }
        },
        {
            "name": "clang",
            "inherits": "vcpkg",
            "displayName": "Clang with Common Warnings",
            "description": "Clang build with comprehensive compiler warnings enabled",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Werror",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -Werror"
            }
        },
        {
            "name": "msvc",
            "inherits": "vcpkg",
            "displayName": "MSVC with Strict Warnings",
            "description": "MSVC build with comprehensive compiler warnings enabled",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "/W4 /permissive- /WX /EHsc",
                "CMAKE_C_FLAGS": "/W4 /permissive- /WX"
            }
        },
        {
            "name": "gcc-release",
            "inherits": "gcc",
            "displayName": "GCC Release with Warnings",
            "description": "GCC release build with compiler warnings enabled",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang-release",
            "inherits": "clang",
            "displayName": "Clang Release with Warnings",
            "description": "Clang release build with compiler warnings enabled",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "msvc-release",
            "inherits": "msvc",
            "displayName": "MSVC Release with Warnings",
            "description": "MSVC release build with compiler warnings enabled",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}