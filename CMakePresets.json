{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "debug",
            "hidden": true,
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CALCULATOR_BUILD_TESTS": "ON",
                "CALCULATOR_BUILD_BENCHMARKS": "OFF"
            },
            "warnings": {
                "dev": true,
                "unusedCli": false
            }
        },
        {
            "name": "release",
            "hidden": true,
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CALCULATOR_BUILD_TESTS": "ON",
                "CALCULATOR_BUILD_BENCHMARKS": "OFF"
            }
        },
        {
            "name": "benchmark",
            "hidden": true,
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/benchmark",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CALCULATOR_BUILD_TESTS": "OFF",
                "CALCULATOR_BUILD_BENCHMARKS": "ON"
            }
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "gcc-debug",
            "inherits": ["gcc", "debug"],
            "displayName": "GCC Debug",
            "description": "Debug build using GCC compiler with tests enabled"
        },
        {
            "name": "gcc-release",
            "inherits": ["gcc", "release"],
            "displayName": "GCC Release",
            "description": "Optimized release build using GCC compiler with tests enabled"
        },
        {
            "name": "gcc-benchmark",
            "inherits": ["gcc", "benchmark"],
            "displayName": "GCC Benchmark",
            "description": "Release build using GCC compiler with benchmarks enabled"
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "clang-debug",
            "inherits": ["clang", "debug"],
            "displayName": "Clang Debug",
            "description": "Debug build using Clang compiler with tests enabled"
        },
        {
            "name": "clang-release",
            "inherits": ["clang", "release"],
            "displayName": "Clang Release",
            "description": "Optimized release build using Clang compiler with tests enabled"
        },
        {
            "name": "clang-benchmark",
            "inherits": ["clang", "benchmark"],
            "displayName": "Clang Benchmark",
            "description": "Release build using Clang compiler with benchmarks enabled"
        },
        {
            "name": "msvc",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_CXX_FLAGS": "/W4 /permissive- /EHsc",
                "CMAKE_C_FLAGS": "/W4 /permissive-"
            }
        },
        {
            "name": "msvc-debug",
            "inherits": ["msvc", "debug"],
            "displayName": "MSVC Debug",
            "description": "Debug build using MSVC compiler with tests enabled (Windows only)"
        },
        {
            "name": "msvc-release",
            "inherits": ["msvc", "release"],
            "displayName": "MSVC Release",
            "description": "Optimized release build using MSVC compiler with tests enabled (Windows only)"
        },
        {
            "name": "msvc-benchmark",
            "inherits": ["msvc", "benchmark"],
            "displayName": "MSVC Benchmark",
            "description": "Release build using MSVC compiler with benchmarks enabled (Windows only)"
        }
    ]
}