{
    "version": 9,
    "include": ["CMakeGenericPresets.json"],
    "configurePresets": [
        {
            "name": "platform",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        }
    ]
}
